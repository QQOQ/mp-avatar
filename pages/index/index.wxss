.container{
	margin-top: 300rpx;
}
.snapshot{
	margin: 0 auto;
	width: 600rpx;
	height: 600rpx;
}
.merge{
	width: 600rpx;
	height: 600rpx;
	position: relative;
	margin: 0 auto;
	overflow: hidden;
}
.avatar,.template{
	width: 100%;
	height: 100%;
	display: block;
}
.template{
	position: absolute;
	left: 0;
	top: 0;
	z-index: 10;
}
.down{
	margin: 50rpx 100rpx 0;
}
.select_img{
	display: flex;
	flex-flow: row;
	width: 500rpx;
	margin: 50rpx auto 0;
	padding: 0 30rpx;
	justify-content: space-between;
	font-size: 32rpx;
}
.button{
	border: none;
	padding: 0;
	background-color: transparent;
	font-size: 32rpx;
	width: auto;
    height: auto;
}
.ver{
	text-align: center;
	position: fixed;
	bottom: 20rpx;
	left: 0;
	right: 0;
	font-size: 26rpx;
	color: #aaa;
	margin-top: 50rpx;
}